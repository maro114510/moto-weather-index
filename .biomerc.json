{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "nursery": {
        "enabled": true
      },
      "suspicious": {
        "noExplicitAny": "error"
      },
      "style": {
        "useConst": "error",
        "noVar": "error"
      },
      "complexity": {
        "noExcessiveFunctionLength": { "maxStatements": 40 },
        "noExcessiveParameterCount": { "maxParameters": 5 }
      }
    }
  },
  "formatter": {
    "enabled": true
  }
}

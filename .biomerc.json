{
  "$schema": "https://biomejs.dev/schemas/2.0.5/schema.json",
  "files": {
    "experimentalScannerIgnores": [
      "*.config.js",
      "*.config.ts",
      "*.config.mjs",
      "*.config.cjs",
      "wrangler.toml",
      "tsconfig.json",
      "package.json",
      "bun.lockb",
      ".biomerc.json",
      "Taskfile.yaml",
      ".wrangler",
      ".wrangler/**/*"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off"
      },
      "correctness": {
        "noUnusedVariables": "warn"
      },
      "style": {
        "useConst": "warn"
      },
      "complexity": {
        "noForEach": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  }
}
